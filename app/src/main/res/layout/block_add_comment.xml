<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <EditText
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="Name"
        android:id="@+id/name_field_id"
        android:background="@color/colorMaterialLightYellow"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:hint="Comment"
        android:id="@+id/comment_field_id"
        android:background="@color/colorMaterialOrange"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/react_button_id"
        android:layout_gravity="center_horizontal"
        android:text="@string/react_with_comment_rsc"/>

</LinearLayout>